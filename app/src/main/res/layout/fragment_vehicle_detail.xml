<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:id="@+id/content_vehicle_detail"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:orientation="vertical"--><!--android:paddingBottom="@dimen/activity_vertical_margin"--><!--android:paddingLeft="@dimen/activity_horizontal_margin"--><!--android:paddingRight="@dimen/activity_horizontal_margin"--><!--android:paddingTop="@dimen/activity_vertical_margin"--><!--tools:context="com.jmgarzo.newratescar.VehicleDetailFragment"--><!--tools:showIn="@layout/activity_vehicle_detail">-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_name"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="25"

                />

        </android.support.design.widget.TextInputLayout>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/better_spinner_vehicle_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vehicle_class"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorAccent"

            />

        <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
        <!--android:id="@+id/better_spinner_vehicle_fuel_type"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="@string/vehicle_fuel_type"-->
        <!--app:met_floatingLabel="highlight"-->
        <!--app:met_primaryColor="@color/colorAccent"-->

        <!--/>-->

        <AutoCompleteTextView
            android:id="@+id/autocompleteView_vehicle_fuel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="@string/vehicle_fuel_type"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="20"/>

        <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
        <!--android:id="@+id/better_spinner_vehicle_make"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="@string/vehicle_make"-->
        <!--app:met_floatingLabel="highlight"-->
        <!--app:met_primaryColor="@color/colorAccent"-->

        <!--/>-->

        <AutoCompleteTextView
            android:id="@+id/autocompleteView_vehicle_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="@string/vehicle_make"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="20"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_model"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="20" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicle_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_vehicle_mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_mileage"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="10"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_vehicle_add_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_vehicle_add_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/vehicle_additional_information"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="10"
                android:minLines="1"
                android:maxLength="500"
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="@string/asterisk_label"
            android:textSize="12sp" />

    </LinearLayout>


</ScrollView>


