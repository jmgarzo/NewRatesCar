<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="form_textView_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="form_editText_style" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!--My Vehicles  CardViews-->
    <style name="MyCardViewTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingTop">24dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyCardViewTitleDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingTop">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="MyCardViewSubtitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCardViewSubtitleDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E3F2FD</item>
    </style>

    <style name="MyCardViewLabel">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyCardViewText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
